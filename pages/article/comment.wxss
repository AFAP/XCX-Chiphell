.base-comment-item {
  padding: 6px 8px;
  border-bottom: 1px solid #f2f2f2;
}

.base-comment-item-top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 5px;
}

.base-comment-nickname {
  font-size: 15px;
  color: #222;
  font-weight: bold;
}

.base-comment-time {
  font-size: 13px;
  color: #888;
}

.base-comment-content {
  font-size: 14px;
  color: #555;
}
